<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-user-group"></i>&nbsp;トピック作成</h2>
  </div>

  <%= form_with model:@topic, url: topics_path, method: :post do |f| %>

    <div class="form-group row">
      <%= f.label :title,'トピック名', class:"col-sm-2 col-form-label" %>
      <div class="col-sm-6">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :body, '本文', class:"col-sm-2 col-form-label"%>
      <div class="col-sm-10">
        <%= f.text_area :body, rows:"5", class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <%= f.hidden_field :community_id, value: @topic.community_id %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <%= f.submit class: 'btn btn-info mt-5', style:"width: 30%" %>
    </div>

  <% end %>

</div>