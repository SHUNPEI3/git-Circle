<div class="container py-5">
  <div class="row m-4">
    <h3><i class="fas fa-list"></i>&nbsp;トピック一覧</h3>
  </div>
  <div class="mt-3">
    <%= render 'public/communities/community_member', community: @community %>
  </div>
  <div class="row mx-1">
    <div class="col-12">
      <%= render 'public/topics/topic_list', topics: @topics %>
    </div>
  </div>
  <%= paginate @topics %>
</div>

<div class="fixed-bottom  bg-primary rounded-pill text-center mx-5 mb-2 p-2">
  <%= link_to new_community_topic_path do %>
    <span class="text-white"><i class="fas fa-plus"></i>&nbsp;トピック新規投稿</span>
  <% end %>
</div>