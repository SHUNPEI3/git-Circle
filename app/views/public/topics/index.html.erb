      <%= link_to new_community_topic_path, class:"btn btn-primary mt-2" do  %>
        <span><i class="fas fa-plus"></i>&nbsp;トピック新規投稿</span>
      <% end %>
    </div>
  </div>
  <div class="row mx-1">
    <%= render 'public/topics/topic_list', topics: @topics %>
  </div>
  <%= paginate @topics %>
</div>