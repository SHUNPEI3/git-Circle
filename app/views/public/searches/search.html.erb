<div class="container py-5">
  <% if @model == "end_user" || @model == "personal_tag" %>
    <div class="row justify-content-end">
      <div class="col-lg-6 col-md-8 col-sm-12 mb-2">
        <%= render 'public/searches/user_search_form' %>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-end">
      <div class="col-lg-6 col-md-8 col-sm-12">
        <%= render 'public/searches/community_search_form' %>
      </div>
      <div class="col-auto">
        <button type="button" class="btn btn-warning text-white" data-toggle="modal" data-target="#myModal"><i class="fas fa-th-large"></i> カテゴリー</button>
      </div>
    </div>
  <% end %>
  <div class="row m-4">
    <h3>"<%= @content %>"を含む検索結果</h3>
  </div>
  <% if @model == "end_user" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/end_users/user_index_card_type', end_users: @records %>
    </div>
  <% elsif @model == "personal_tag" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/end_users/user_index_card_type2', personal_tags: @records %>
    </div>
  <% elsif @model == "community" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/communities/community_index_card_type', communities: @records %>
    </div>
  <% elsif @model == "community_tag" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/communities/community_index_card_type2', community_tags: @records %>
    </div>
  <% end %>
</div>

<%= render 'public/categories/category_list', category_list: @category_list %>