<div class="container py-5">
  <% if @model == "end_user" || @model == "personal_tag" %>
    <div class="row justify-content-end">
      <div class="col-lg-6 col-md-8 col-sm-12">
        <%= render 'public/searches/user_search_form' %>
      </div>
    </div>
  <% else %>
    <div class="row justify-content-end">
      <div class="col-lg-6 col-md-8 col-sm-12">
        <%= render 'public/searches/community_search_form' %>
      </div>
    </div>
  <% end %>
  <div class="row m-4">
    <h3>"<%= @content %>"を含む検索結果</h3>
  </div>
  <% if @model == "end_user" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/end_users/user_list_normal', end_users: @records %>
    </div>
  <% elsif @model == "personal_tag" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/end_users/user_list_tag', personal_tags: @records %>
    </div>
  <% elsif @model == "community" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/communities/community_list_normal', communities: @records %>
    </div>
  <% elsif @model == "community_tag" %>
    <div class="row justify-content-sm-start justify-content-around mt-2">
      <%= render 'public/communities/community_list_tag', community_tags: @records %>
    </div>
  <% end %>
</div>
