<div class="container py-5">
  <div class="row justify-content-around mt-5 py-5">
    <div class="col-lg-7">
      <div class=><%= image_tag 'logo.png', class:"img-fluid mx-auto" %></div>
      <h1 class="font-weight-bold m-3">あなたとだれかを繋ぐ場所</h1>
      <h1 class="font-weight-bold m-3">さぁ、始めてみよう！</h1>
    </div>
    <div class="col-lg-4 border rounded-lg bg-white align-self-center mt-5 mx-2 p-4">
      <div class="rounded-pill bg-warning text-center p-3">
        <%= link_to "新規登録はこちら！", new_end_user_registration_path, class:'text-light font-weight-bold' %>
      </div>
      <%= form_with model:@end_user, url: end_user_session_path, method: :post do |f| %>
        <div class="form-group mt-3">
          <small><%= f.label :email, "メールアドレス" %></small>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
        </div>
        <div class="form-group">
          <small><%= f.label :password, "パスワード" %></small>
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
        </div>
        <%= f.submit "ログイン", class:"btn btn-info mt-3 py-2", style:"width: 100%"%>
        <p class="text-center mt-3">─── または ───</p>
        <%= link_to "ゲストでログイン", end_user_guest_sign_in_path, method: :post, class:"btn btn-outline-secondary my-1 py-2", style:"width: 100%" %>
      <% end %>
    </div>
  </div>
</div>
<div class="container-field bg-white py-3">
  <div class="row justify-content-center m-3">
    <div class="col-11 text-warning text-center"><span class="h2">注目のコミュニティ</span></div>
    <% @community_ranks.each.with_index(1) do |community, i| %>
      <div class="col-lg-3 col-md-4 col-sm-6 col-10 p-3">
        <h3 class="text-center">第<%= i %>位</h2>
        <div class="card shadow">
          <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
              <li class="nav-item">
                <a href="#rank-contents1-<%= community.id %>" class="nav-link active text-dark" data-toggle="tab">基本情報</a>
              </li>
              <li class="nav-item">
                <a href="#rank-contents2-<%= community.id %>" class="nav-link text-dark" data-toggle="tab">紹介文</a>
              </li>
            </ul>
          </div>
          <%= image_tag community.get_community_image(150, 150), class:"class=card-img-top p-1" %>
          <div class="card-body">
            <h4 class="card-title text-warning"><%= community.name %></h4>
          </div>
          <div class="tab-content">
            <div id="rank-contents1-<%= community.id %>" class="tab-pane active">
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="fas fa-user"></i>&nbsp;&nbsp;<span class="h5 text-danger"><%= (community.end_users.count).to_s %></span>人が参加中</li>
                <li class="list-group-item"><i class="fas fa-tag"></i>
                  <% community.tags.each do |community_tag| %>
                    <%= "#" + community_tag.name %>
                  <% end %>
                </li>
             </ul>
            </div>
            <div id="rank-contents2-<%= community.id %>" class="tab-pane">
              <div class="card-body">
                <p class="card-text"><%= community.introduction.truncate(40) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
