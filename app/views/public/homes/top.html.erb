      <%= render 'public/sessions/login_form', end_user: @end_user %>
    </div>
  </div>
  <div class="container my-4">
    <h4>新着コミュニティ</h4>
    <div class="row flex-nowrap overflow-auto">
      <%= render 'public/communities/community_list_top', communities: @new_communities %>
    </div>
  </div>
</div>

