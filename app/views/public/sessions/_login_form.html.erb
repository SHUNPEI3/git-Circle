<div class="rounded-pill bg-warning text-center mb-2 p-2">
  <%= link_to "新規登録はこちら！", new_end_user_registration_path, class:'text-light font-weight-bold' %>
</div>
<%= form_with model:@end_user, url: end_user_session_path, method: :post do |f| %>
  <div class="form-group mb-1">
    <small><%= f.label :email, "メールアドレス" %></small>
    <%= f.email_field :email, autocomplete: "email", placeholder:"sample@example.com", class:"form-control form-control-sm" %>
  </div>
  <div class="form-group mb-1">
    <small><%= f.label :password, "パスワード" %></small>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-sm" %>
  </div>
  <%= f.submit "ログイン", class:"btn btn-info my-2 py-1", style:"width: 100%"%>
  <div class="text-center my-2">─── または ───</div>
  <%= link_to "ゲストでログイン", end_user_guest_sign_in_path, method: :post, class:"btn btn-outline-secondary my-2 py-1", style:"width: 100%" %>
<% end %>