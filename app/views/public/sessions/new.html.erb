<div class="container">
  <div class="row m-4">
    <h2>ログイン</h2>
  </div>
  
  <%= form_with model:@end_user, url: session_path(resource_name) do |f| %>
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <table class="table table-borderless">
          <tr>
            <th class="col-sm-3"><%= f.label :email, "メールアドレス", class:"col-form-label" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %></td>
          </tr>
          <tr>
            <th class="col-sm-3"><%= f.label :password, "パスワード", class:"col-form-label" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control"%></td> 
          </tr>
        </table>
      </div>
    </div>
  
    <div class="row justify-content-center">
      <%= f.submit "ログイン", class:"btn btn-primary" %>
    </div>
  <% end %>

  <h5>登録がお済みでない方</h5>
  <%= render "public/shared/links" %>
</div>