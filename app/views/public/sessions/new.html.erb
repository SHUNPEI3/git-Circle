<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-lock-open"></i>&nbsp;ログイン</h2>
  </div>

  <%= form_with model:@end_user, url: session_path(resource_name) do |f| %>
    <div class="row justify-content-center">
      <div class="col-md-8">
        <table class="table table-borderless">
          <tr>
            <th class="col-md-3"><%= f.label :email, "メールアドレス", class:"col-form-label" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %></td>
          </tr>
          <tr>
            <th class="col-md-3"><%= f.label :password, "パスワード", class:"col-form-label" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "ログイン", class:"btn btn-primary", style:"width: 30%" %>
    </div>
  <% end %>

    <div class="row justify-content-center mt-4">
        <%= link_to "ゲストでログイン", end_user_guest_sign_in_path, method: :post, class:"btn btn-outline-secondary", style:"width: 30%" %>
    </div>

  <h5>登録がお済みでない方</h5>
  <%= render "public/shared/links" %>
</div>