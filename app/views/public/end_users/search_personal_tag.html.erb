<div class="container">
  <div class="row m-4">
    <h2>＃タグが&nbsp;"<%=@tag.name%>"&nbsp;のユーザー一覧</h2>
  </div>
  <div class="row">
    <div class="col-md-12 mt-2">
      <% @tag_list.each do |list|%>
        <% unless list.end_users.count == 0 %>
          <%=link_to "#{ "#" + list.name}", search_personal_tag_end_user_path(list) %>
          <span class="mr-2"><%="(#{list.end_users.count})" %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-around">
    <div class="col-md-12 mt-2">
      <div class="card">
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th class="text-center", style="width: 15%">ユーザー</th>
              <th style="width: 70%">自己紹介</th>
              <th style="width: 15%"></th>
            </tr>
          </thead>
          <tbody>
            <% @end_users.each do |user| %>
              <% if user.active_for_authentication? %>
                <tr>
                  <td class="align-middle text-center">
                    <%= link_to end_user_path(user.id) do %>
                      <%= image_tag user.get_profile_image(60, 60), class: "rounded-circle" %><br>
                      <small><%= user.nickname %></small>
                    <% end %>
                  </td>
                  <td class="align-middle">
                    <p><%= user.introduction.truncate(45) %></p>
                    <% user.personal_tags.each do |tag| %>
                      <small class="mr-2"><%= link_to "#" + tag.name, search_personal_tag_end_user_path(tag) %></small>
                    <% end %>
                  </td>
                  <td class="align-middle" id="favorite-buttons-<%= user.id %>">
                    <%= render 'public/relationships/favorite_btn', end_user: user %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
