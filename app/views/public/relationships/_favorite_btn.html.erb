<% unless current_end_user.guest_user? || (current_end_user == end_user) %>
  <% if end_user.followed_by?(current_end_user) %>
    <%= link_to 'フォロー中', end_user_relationships_path(end_user), method: :delete, remote: true, class: "btn btn-outline-secondary px-5" %>
  <% else %>
    <%= link_to 'フォローする', end_user_relationships_path(end_user), method: :post, remote: true, class: "btn btn-primary px-5" %>
  <% end %>
<% end %>