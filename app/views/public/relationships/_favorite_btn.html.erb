<% unless current_end_user == end_user %>
  <% if end_user.followed_by?(current_end_user) %>
    <%= link_to 'フォロー中', end_user_relationships_path(end_user), method: :delete, remote: true, class: "btn btn-light", style:"width: 85%" %>
  <% else %>
    <%= link_to 'フォローする', end_user_relationships_path(end_user), method: :post, remote: true, class: "btn btn-primary", style:"width: 85%" %>
  <% end %>
<% end %>