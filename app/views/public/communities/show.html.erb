<%= flash[:notice] %>
<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-object-group"></i>&nbsp;コミュニティ詳細</h2>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-3">

      <%= image_tag @community.get_community_image(220, 220), class:"d-block mx-auto img-thumbnail" %>

      <div class="border mt-5 mx-3 p-3">
        <div>
          <h6>リーダー</h6>
          <%= link_to end_user_path(@community.owner) do %>
            <%= image_tag @community.owner.get_profile_image(50, 50), class:"rounded-circle mr-3" %>
            <%= @community.owner.last_name %>&nbsp;<%= @community.owner.first_name %>
          <% end %>
        </div>
        <div class="mt-3">
          <h6>メンバー</h6>
          <% @community.end_users.each do |member| %>
            <% unless !member.active_for_authentication? || @community.owner == member %>
              <li style="list-style: none;">
                <%= link_to end_user_path(member) do %>
                  <%= image_tag member.get_profile_image(50, 50), class:"rounded-circle mr-3 mb-3" %>
                  <%= member.last_name %>&nbsp;<%= member.first_name %>
                <% end %>
              </li>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="row justify-content-center mt-5">
        <% unless current_end_user.guest_user? %>
          <% if @community.owner_id == current_end_user.id %>
            <%= link_to '編集する', edit_community_path(@community), class: "btn btn-success", style:"width: 65%" %>
          <% elsif @community.already_joined?(current_end_user) %>
            <%= link_to '退出する', community_community_users_path(@community), method: :delete, data: { confilm: "本当に退出しますか？" }, class: "btn btn-danger", style:"width: 65%" %>
          <% else %>
            <%= link_to '参加する', community_community_users_path(@community), method: :post, class: "btn btn-success", style:"width: 60%" %>
          <% end %>
        <% end %>
      </div>

    </div>

    <div class="col-md-8 border">
      <h1 class="col-md-8 border m-3"><%= @community.name %></h1>
      <div class="m-3">
        <i class="fas fa-tag"></i>
          <% @community.tags.each do |community_tag| %>
            &nbsp;<%= link_to "#{"#" + community_tag.name}", search_community_tag_community_path(community_tag) %>
          <% end %>
        </div>
      <div class="border m-3">
        <table class="table table-borderless">
          <tr>
            <th class="col-md-3">参加条件</th>
            <td>
              <% @community.community_details.each do |detail| %>
                <% if detail.max_join_number? %>
                 <li><%= detail.max_join_number %>人まで&nbsp;&nbsp;（現在<%= @community.end_users.count %>人参加中）</li>
                <% end %>
                <% if detail.sex_limit? %>
                  <li><%= detail.sex_limit_i18n %></li>
                <% end %>
                <% if detail.activity_area_limit? %>
                  <li><%= detail.activity_area_limit_i18n %></li>
                <% end %>
                <% if detail.age_min_limit || detail.age_max_limit %>
                  <li><%= detail.age_min_limit %>〜<%= detail.age_max_limit %>歳まで</li>
                <% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>グループ紹介</th>
            <td><%= safe_join(@community.introduction.split("\n"), tag(:br)) %></td>
          </tr>
        </table>
      </div>

      <h3 class="col-md-8 m-3">新着トピックス</h3>
      <div class="border m-3"></div>
      <% @topics.each do |topic| %>
        <% if topic.end_user.active_for_authentication? %>
          <div class="d-flex justify-content-between m-3">
            <h5 class="col-md-8 text-truncate"><i class="far fa-flag"></i>&nbsp;&nbsp;&nbsp;<%= link_to topic.title, community_topic_path(topic.community,topic) %></h5>
            <p><small><%= topic.created_at.strftime("%Y/%m/%d\ %R") %>&nbsp;投稿</small></p>
          </div>
        <% end %>
      <% end %>
      <div class="d-flex flex-column justify-content-end  m-3">
        <%= link_to 'トピック一覧', community_topics_path(@community) %>
      </div>
    </div>
  </div>







