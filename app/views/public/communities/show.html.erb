<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-user-group"></i>&nbsp;コミュニティ詳細</h2>
  </div>

  <div class="row">
    <table class='table'>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Introduction</th>
          <th>Members</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tr>
          <td><%= image_tag @community.get_community_image(50, 50) %></td>
          <td><%= @community.name %></td>
          <td><%= @community.introduction %></td>
          <td>
            <% @community.end_users.each do |memuber| %>
             <li style="list-style: none;"><%= memuber.last_name %></li>
            <% end %>
          </td>
          <td>
            <% if @community.owner_id == current_end_user.id %>
              <%= link_to 'Edit', edit_community_path(@community), class: "btn btn-sm btn-success" %>
            <% elsif @community.already_joined?(current_end_user) %>
              <%= link_to 'Leave this group', community_community_users_path(@community), method: :delete, data: { confilm: "本当に退会しますか？" }, class: "btn btn-sm btn-danger" %>
            <% else %>
              <%= link_to 'Join this group', community_community_users_path(@community), method: :post, class: "btn btn-sm btn-success" %>
            <% end %>
          </td>
        </tr>
    </table>
  </div>

</div>