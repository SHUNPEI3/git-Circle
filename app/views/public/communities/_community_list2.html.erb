<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th class="text-center" style="width: 15%">コミュニティ名</th>
      <th style="width: 65%">紹介文</th>
      <th class="text-center" style="width: 20%">メンバー</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |tag| %>
      <% tag.communitys.each do |community| %>
        <tr>
          <td class="align-middle text-center">
            <%= link_to community_path(community.id) do %>
              <%= image_tag community.get_community_image(100, 100), class: "rounded-circle" %><br>
              <small><%= community.name %></small>
            <% end %>
          </td>
          <td class="align-middle">
            <h5 class="mb-4"><%= community.introduction.truncate(38) %></h5>
            <% community.tags.each do |tag| %>
              <small class="mr-2"><%= link_to "#" + tag.name, search_community_tag_community_path(tag) %></small>
            <% end %>
          </td>
          <td class="align-middle text-center">
            <% community.end_users.each do |member| %>
              <% if member.active_for_authentication? %>
                <li class="list-unstyled text-info my-2">
                  <%= link_to end_user_path(member.id) do %>
                    <span class="text-info"><%= "#{member.nickname}" %></span>
                  <% end %>
                </li>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>