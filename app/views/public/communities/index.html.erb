<div class="container pb-5">
  <div class="row justify-content-end m-4">
    <div class="col-md-6">
      <%= render 'public/searches/community_search_form' %>
    </div>
  </div>

  <div class="row justify-content-between m-4">
    <h2><i class="fas fa-people-arrows"></i>&nbsp;新着コミュニティ</h2>
    <h4 class="mt-2">
      <% unless current_end_user.guest_user? %>
        <%= link_to new_community_path, class:"btn btn-primary btn-lg" do %>
          <span class="h5"><i class="fas fa-plus"></i>&nbsp;コミュニティ新規作成</span>
        <% end %>
      <% end %>
    </h4>
  </div>
  <div class="row">
    <%= render 'public/communities/community_list', communities: @communities %>
  </div>
</div>
