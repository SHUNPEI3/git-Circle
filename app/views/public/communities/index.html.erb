<div class="container">
  <div class="row justify-content-end m-4">
    <div class="col-md-6">
      <%= form_with url: search_path, method: :get do |f| %>
       <div class="input-group">
         <%= f.text_field :content, placeholder:"キーワードを入力", class:"form-control", style:"width: 35%" %>
         <%= f.select :model, options_for_select({"コミュニティ名"=>"community", "タグ"=>"community_tag"}), {}, {class:"form-control"} %>
         <span class="input-group-btn input-group-append">
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            <i class="fas fa-search"></i>検索
          <% end %>
         </span>
       </div>
    <% end %>
    </div>
  </div>

  <div class="row m-4">
    <h2><i class="fas fa-people-arrows"></i>&nbsp;新着コミュニティ</h2>
    <div><%= link_to 'コミュニティを作成する', new_community_path %></div>
  </div>

  <div class="row">
    <% @communities.each do |community| %>
      <div class="col-md-3 shadow p-3">
        <%= image_tag community.get_community_image(200, 200), class:"d-block mx-auto img-thumbnail" %>
        <div class="pt-3 px-3">
          <h4 class="text-center"><%= link_to community.name, community_path(community)  %></h4>
          <i class="fas fa-user"></i>&nbsp;&nbsp;<%= (community.end_users.count).to_s + "人が参加中" %></br>
          <i class="fas fa-tag"></i>
          <% community.tags.each do |community_tag| %>
            &nbsp;<%= link_to "#{"#" + community_tag.name}", search_community_tag_community_path(community_tag) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>
