<div class="container">
  <div class="row justify-content-end m-4">
    <div class="col-md-6">
      <%= form_with url: search_path, method: :get do |f| %>
       <div class="input-group">
         <%= f.text_field :content, placeholder:"キーワードを入力", class:"form-control", style:"width: 35%" %>
         <%= f.select :model, options_for_select({"コミュニティ名"=>"community", "タグ"=>"community_tag"}), {}, {class:"form-control"} %>
         <span class="input-group-btn input-group-append">
          <%= button_tag(type: "submit", class: "btn btn-warning") do %>
            <i class="fas fa-search"></i>検索
          <% end %>
         </span>
       </div>
    <% end %>
    </div>
  </div>

  <div class="row m-4">
    <h2><i class="fas fa-people-arrows"></i>&nbsp;新着コミュニティ</h2>
    <div><%= link_to 'コミュニティを作成する', new_community_path %></div>
  </div>

  <div class="row">
    <% @communities.each do |community| %>
      <div class="col-md-3 mb-3" >
        <div class="card shadow">
          <%= image_tag community.get_community_image(150, 150), class:"class=card-img-top p-1" %>
          <div class="card-body">
            <h4 class="card-title text-info"><%= community.name %></h4>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="fas fa-user"></i>&nbsp;&nbsp;<%= (community.end_users.count).to_s + "人が参加中" %></li>
            <li class="list-group-item"><i class="fas fa-tag"></i>
              <% community.tags.each do |community_tag| %>
                 &nbsp;<%= link_to "#{"#" + community_tag.name}", search_community_tag_community_path(community_tag) %>
              <% end %>
            </li>
          </ul>
          <div class="card-body">
            <%= link_to '詳細をチェック', community_path(community), class:"btn btn-info" %></h4>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
