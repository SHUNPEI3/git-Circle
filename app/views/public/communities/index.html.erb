<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-user-group"></i>&nbsp;新着コミュニティ</h2>
    <div><%= link_to 'コミュニティを作成する', new_community_path %></div>
  </div>

  <div class="row">
    <% @communities.each do |community| %>
      <div class="col-md-3 shadow">
        <div class="p-3">
          <%= link_to community_path(community) do %>
            <%= image_tag community.get_community_image(180, 180) %><br>
            <h4><%= community.name %></h4>
          <% end %>
          メンバー：<%= (community.end_users.count).to_s + "人" %><br>
          タグ：<%= "tag" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
