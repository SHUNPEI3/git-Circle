<div class="container">
  <div class="row m-4">
    <h2>タグが&nbsp;"<%=@tag.name%>"&nbsp;のコミュニティ一覧</h2>
  </div>
  <div class="row">
    <div class="col-md-12 mt-2">
      <% @tag_list.each do |list|%>
        <% unless list.communitys.count == 0 %>
          <%=link_to "#{ "#" + list.name}", search_community_tag_community_path(list) %>
          <span class="mr-2"><%="(#{list.communitys.count})" %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-around">
    <div class="col-md-12 mt-2">
      <div class="card">
        <div class="row">
          <%= render 'public/communities/community_list', communities: @communities %>
        </div>
      </div>
    </div>
  </div>
</div>
