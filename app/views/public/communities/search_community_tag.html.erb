<div class="container">
  <div class="row m-4">
    <h2>タグが&nbsp;"<%=@tag.name%>"&nbsp;のコミュニティ一覧</h2>
  </div>
  <div class="row">
    <div class="col-md-12 mt-2">
      <% @tag_list.each do |list|%>
        <% unless list.communitys.count == 0 %>
          <%=link_to "#{ "#" + list.name}", search_community_tag_community_path(list) %>
          <span class="mr-2"><%="(#{list.communitys.count})" %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-around">
    <div class="col-md-12 mt-2">
      <div class="card">
        <table class="table table-hover">
          <thead class="thead-light">
            <tr>
              <th class="text-center" style="width: 15%">コミュニティ名</th>
              <th style="width: 65%">紹介文</th>
              <th class="text-center" style="width: 20%">メンバー</th>
            </tr>
          </thead>
          <tbody>
            <% @communities.each do |community| %>
              <tr>
                <td class="align-middle text-center">
                  <%= link_to community_path(community.id) do %>
                    <%= image_tag community.get_community_image(100, 100), class: "rounded-circle" %><br>
                    <small><%= community.name %></small>
                  <% end %>
                </td>
                <td class="align-middle">
                  <h5 class="mb-4"><%= community.introduction.truncate(38) %></h5>
                  <% community.tags.each do |tag| %>
                    <small class="mr-2"><%= link_to "#" + tag.name, search_community_tag_community_path(tag) %></small>
                  <% end %>
                </td>
                <td class="align-middle text-center">
                  <% community.end_users.each do |member| %>
                    <% if member.active_for_authentication? %>
                      <li class="list-unstyled my-2">
                        <%= link_to "#{member.nickname}", end_user_path(member.id) %>
                      </li>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
