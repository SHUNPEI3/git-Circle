<div class="container">
  <div class="row m-4">
    <h2><i class="fas fa-user-group"></i>&nbsp;コミュニティ作成</h2>
  </div>

  <div class="row">

    <%= form_with model:@community, method: :post do |f| %>

      <div class="form-group">
        <%= f.label :コミュニティ名 %>
        <%= f.text_field :name, class: 'form-control' %>
     </div>

      <div class="form-group">
        <%= f.label :紹介文 %>
        <%= f.text_area :introduction, class: 'form-control', style:"width: 200%" %>
      </div>

      <div class="form-group">
        <%= f.label :コミュニティ画像 %>
        <%= f.file_field :community_image, class: "form-control-file", accept: 'image/*' %>
      </div>

      <div class="form-group">
        <%= f.submit class: 'btn btn-info' %>
      </div>

    <% end %>

  </div>

</div>