<div class="container pb-5">
  <div class="row justify-content-center mt-5">
    <h2>管理者ログイン</h2>
  </div>
  <%= form_with model:@admin, url: session_path(resource_name) do |f| %>
    <div class="row justify-content-center mt-5">
      <div class="col-lg-8 col-md-11 col-sm-12">
        <table class="table table-borderless">
          <tr>
            <th class="col-3"><%= f.label :email, "E-mail", class:"col-form-label" %></th>
            <td class="col-9"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %></td>
          </tr>
          <tr>
            <th class="col-3"><%= f.label :password, "パスワード", class:"col-form-label" %></th>
            <td class="col-9"><%= f.password_field :password, autocomplete: "current-password", class:"form-control" %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class="row justify-content-center">
      <%= f.submit "ログイン", class:"btn btn-primary mt-3", style:"width: 30%" %>
    </div>
  <% end %>
  <%= render "admin/shared/links" %>
</div>