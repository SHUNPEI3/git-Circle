<div class="container">
  <div class="row m-4">
    <h2>コメント一覧</h2>
  </div>

  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <th>ID</th>
        <th>コメント</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th>表示設定</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% @topic_comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.comment.truncate(25) %></td>
            <td><%= link_to "#{comment.end_user.last_name + comment.end_user.first_name}", admin_end_user_path(comment.end_user) %></td>
            <td><%= comment.created_at.strftime("%Y/%m/%d\ %R") %></td>
            <td>
              <% if comment.is_active? %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-danger">非表示</span>
              <% end %>
            </td>
            <td>
              <%= link_to '非表示', admin_community_topic_topic_comment_path(comment.topic.community,comment.topic,comment), method: :patch, class:"btn btn-sm btn-secondary my-1",style:"width:60%" %>
              <%= link_to '削除', admin_community_topic_topic_comment_path(comment.topic.community,comment.topic,comment), method: :delete, class:"btn btn-sm btn-danger my-1", style:"width:60%" %>
            </td>
            <td><%= link_to "詳細", admin_community_topic_path(comment.topic.community, comment.topic), class: "btn btn-primary my-1" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
   </div>

</div>
