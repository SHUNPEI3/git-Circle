<div class="container py-5">
  <div class="row m-4">
    <h3><%= @end_user.last_name %><%= @end_user.first_name %>さん (<%= @end_user.nickname %>) の詳細ページ</h3>
  </div>
  <div class="row justify-content-around">
    <div class="col-lg-4 col-md-9 col-12 mb-3">
      <div><%= image_tag @end_user.get_profile_image(500, 500), class:"img-thumbnail" %></div>
      <div class="row justify-content-around text-center text-secondary my-2">
        <div></div>
          <span class="h6">コミュニティ<br><%= @end_user.communities.count %></span>
        <div class="border"></div>
          <span class="h6">投稿トピック<br><%= @end_user.topics.count %></span>
        <div></div>
      </div>
    </div>
    <div class="col-lg-8 col-md-9 col-12 mb-3">
      <div class="card shadow">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item"><a href="#contents1" class="nav-link active text-dark" data-toggle="tab">基本情報</a></li>
            <li class="nav-item"><a href="#contents2" class="nav-link text-dark" data-toggle="tab">自己紹介</a></li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="contents1" class="tab-pane active">
            <%= render 'admin/end_users/profile_1', end_user: @end_user %>
          </div>
          <div id="contents2" class="tab-pane">
            <%= render 'admin/end_users/profile_2', end_user: @end_user %>
          </div>
    　　  </div>
      </div>
    </div>
  </div>
  <div class="row mt-3 mx-0">
    <h4>参加中のコミュニティリスト</h4>
  </div>
  <div class="table-responsive-md overflow-auto", style="max-height:300px">
    <table class="table text-nowrap">
      <thead class="thead-light sticky-top">
        <th>ComuID</th>
        <th>コミュニティ名</th>
        <th>作成者</th>
        <th>メンバー</th>
        <th>参加条件設定</th>
        <th>募集状況</th>
        <th></th>
      </thead>
      <tbody>
        <%= render 'admin/communities/list', communities: @communities %>
      </tbody>
    </table>
  </div>
  <div class="row mt-3 mx-0">
    <h4>投稿トピックリスト</h4>
  </div>
  <div class="table-responsive-md overflow-auto", style="max-height: 300px">
    <table class="table text-nowrap">
      <thead class="thead-light sticky-top">
        <th>TopicID</th>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>投稿日</th>
        <th>コミュニティ名</th>
        <th></th>
      </thead>
      <tbody>
        <%= render 'admin/topics/list', topics: @topics %>
      </tbody>
    </table>
  </div>
</div>